{
  "name": "logux-server",
  "version": "0.2.9",
  "description": "Logux server-side framework",
  "keywords": [
    "logux",
    "server"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "logux/logux-server",
  "engines": {
    "node": ">=6.0.0"
  },
  "dependencies": {
    "bunyan": "^1.8.12",
    "chalk": "^2.4.1",
    "logux-core": "logux/logux-core",
    "nanoevents": "^1.0.5",
    "nanoid": "^1.1.1",
    "prom-client": "^11.1.1",
    "semver": "^5.5.0",
    "strip-ansi": "^4.0.0",
    "url-pattern": "^1.0.3",
    "ws": "^6.0.0",
    "yargs": "^12.0.1",
    "yyyy-mm-dd": "^1.0.2"
  },
  "devDependencies": {
    "clean-publish": "^1.0.9",
    "cross-spawn": "^6.0.5",
    "eslint": "^5.3.0",
    "eslint-ci": "^0.1.1",
    "eslint-config-logux": "^24.0.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jest": "^21.18.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^3.1.0",
    "jest": "^23.4.2",
    "jsdoc": "^3.5.5",
    "lint-staged": "^7.2.0",
    "nanodelay": "^0.1.4",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.2",
    "yaspeller-ci": "^1.0.0"
  },
  "scripts": {
    "lint-staged": "lint-staged",
    "spellcheck": "yarn docs && yaspeller-ci *.md docs/*.html",
    "clean": "rimraf docs/ coverage/",
    "lint": "eslint-ci *.js test/{**/,}*.js",
    "docs": "jsdoc -d docs/ *.js",
    "test": "jest --runInBand --coverage && yarn lint && yarn spellcheck"
  },
  "pre-commit": [
    "lint-staged"
  ],
  "lint-staged": {
    "*.md": "yaspeller-ci",
    "*.js": "eslint"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/server.js"
    ]
  },
  "eslintConfig": {
    "extends": "eslint-config-logux/node"
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "excludeFiles": [
      "docs/*.js.html"
    ],
    "dictionary": [
      "Logux",
      "LOGUX",
      "docdash",
      "JSDoc",
      "js",
      "WSS",
      "WebSocket",
      "ws",
      "env",
      "BaseServer",
      "UI",
      "listenOptions",
      "subprotocol",
      "nodeId",
      "auth",
      "ServerNode",
      "remoteAddress",
      "ServerConnection",
      "SemVer",
      "npm",
      "DevOps",
      "PEM",
      "Versioning",
      "Wintermute",
      "loadOptions",
      "stacktrace",
      "debugError",
      "nanoevents",
      "cli",
      "CLI",
      "bunyan",
      "isServer",
      "params",
      "regexp",
      "sendAction",
      "TestTime",
      "userId",
      "Neuromancer",
      "Anton",
      "Savoskin",
      "Pavel",
      "Hanna",
      "Stoliar",
      "Artamonov",
      "Mateusz",
      "Derks",
      "Fursov",
      "Grigory",
      "Moroz",
      "Grigoriy",
      "Beziuk",
      "Mitin",
      "Konstantin",
      "Krivlenia",
      "filterCreator",
      "otherType",
      "unknownType",
      "wrongChannel",
      "otherChannel",
      "BackedSettings",
      "backend",
      "ChannelContext",
      "ctx",
      "GMT",
      "Mon",
      "Tue",
      "Thu",
      "Fri",
      "cwd",
      "MemoryStore",
      "ENV",
      "semver"
    ]
  }
}
