{
  "name": "@logux/server",
  "version": "0.3.3",
  "description": "Build own Logux server or make proxy between WebSocket and HTTP backend on any language",
  "keywords": [
    "logux",
    "server",
    "framework",
    "websocket",
    "proxy",
    "crdt",
    "event sourcing",
    "distributed systems"
  ],
  "scripts": {
    "api": "documentation build *.js -f md -o api.md",
    "spell": "yarn api && yaspeller-ci *.md",
    "clean": "rimraf api.md coverage/",
    "lint": "eslint-ci *.js test/{**/,}*.js",
    "test": "jest --forceExit --runInBand --coverage && yarn lint && yarn spell"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "logux/server",
  "engines": {
    "node": ">=10.0.0"
  },
  "dependencies": {
    "@logux/core": "^0.3.0",
    "bunyan": "^1.8.12",
    "chalk": "^2.4.2",
    "nanoevents": "^1.0.8",
    "nanoid": "^2.0.1",
    "semver": "^6.0.0",
    "strip-ansi": "^5.2.0",
    "url-pattern": "^1.0.3",
    "ws": "^6.2.1",
    "yargs": "^13.2.2",
    "yyyy-mm-dd": "^1.0.2"
  },
  "devDependencies": {
    "@logux/eslint-config": "^28.2.0",
    "clean-publish": "^1.1.2",
    "cross-spawn": "^6.0.5",
    "documentation": "^10.1.0",
    "eslint": "^5.16.0",
    "eslint-ci": "^1.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-import-helpers": "^0.1.4",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^2.1.0",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "nanodelay": "^0.1.4",
    "rimraf": "^2.6.3",
    "yaspeller-ci": "^1.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller-ci",
    "*.js": "eslint"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/server.js"
    ]
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/node"
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      "\\(by [^ ]+( [^ ]+)*\\)"
    ],
    "dictionary": [
      "addClient",
      "auth",
      "authenticator",
      "authorizer",
      "backend",
      "BaseServer",
      "Bunyan",
      "bunyan",
      "channelAuthorizer",
      "ChannelContext",
      "CLI",
      "clientId",
      "debugError",
      "env",
      "filterCreator",
      "GraphQL",
      "isServer",
      "isSubprotocol",
      "loadOptions",
      "Logux",
      "logux",
      "MemoryStore",
      "nanoevents",
      "nodeId",
      "npm",
      "npmâ€™s",
      "otherChannel",
      "otherType",
      "params",
      "regexp",
      "remoteAddress",
      "SemVer",
      "sendAction",
      "ServerClient",
      "ServerConnection",
      "ServerNode",
      "stacktrace",
      "subprotocol",
      "TestTime",
      "UI",
      "unknownType",
      "userId",
      "Versioning",
      "WebSocket",
      "Wintermute",
      "wrongChannel",
      "WSS"
    ]
  }
}
